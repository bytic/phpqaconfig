{
    "name": "bytic/phpqaconfig",
    "description": "Meta package for configuration files for PHP QA tools",
    "type": "library",
    "keywords": [
        "php",
        "qa",
        "quality",
        "code quality",
        "stylecheck",
        "unittest"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Solomon Gabriel",
            "email": "hello@gabrielsolomon.ro",
            "homepage": "http://gabrielsolomon.ro",
            "role": "Developer"
        }
    ],
    "autoload": {
        "files": [
            "./rules/PhpCsFixer/helpers.php"
        ]
    },
    "require": {
        "php": "^7.4 || ^8",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "phpcsstandards/phpcsextra": "^1.0.0-alpha3",
        "phpcsstandards/phpcsutils": "^1.0.0-alpha3",
        "slevomat/coding-standard": "^7.0||^8.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.8 || ^3.0"
    },
    "suggest": {
    },
    "bin": [
        "bin/qaconfig"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
